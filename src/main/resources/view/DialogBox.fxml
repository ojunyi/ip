<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<fx:root type="javafx.scene.layout.VBox"
         xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/17"
         spacing="4"
         style="-fx-background-color: rgba(0,20,50,0.55);
                -fx-border-color: #2A6496;
                -fx-border-width: 0 0 0 3;
                -fx-padding: 10 14 10 14;
                -fx-background-radius: 0;
                -fx-border-radius: 0;">
    <padding>
        <Insets top="10" right="14" bottom="10" left="14"/>
    </padding>

    <!-- Speaker label row with avatar -->
    <HBox spacing="8" alignment="CENTER_LEFT">
        <ImageView fx:id="displayPicture"
                   fitWidth="40" fitHeight="40"
                   preserveRatio="true"
                   style="-fx-effect: dropshadow(one-pass-box, #5BC8F5, 4, 0.5, 0, 0);"/>
        <Label fx:id="speakerLabel"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 18px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #FFD700;
                      -fx-letter-spacing: 2;"/>
    </HBox>

    <!-- Dialog text -->
    <Label fx:id="dialog"
           wrapText="true"
           style="-fx-font-family: 'Courier New';
                  -fx-font-size: 18px;
                  -fx-text-fill: #FFFFFF;
                  -fx-padding: 2 0 0 48;
                  -fx-line-spacing: 3;"/>
</fx:root>
