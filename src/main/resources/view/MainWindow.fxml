<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #F5F5F5;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="buddiboi.ui.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    prefHeight="540.0"
                    prefWidth="400.0"
                    style="-fx-background: #F5F5F5; -fx-background-color: transparent;"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="60.0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefWidth="388.0"
                      style="-fx-background-color: #F5F5F5;"
                      spacing="10.0">
                    <padding>
                        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <HBox alignment="CENTER_LEFT"
              spacing="10.0"
              style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0;"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
            </padding>
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           promptText="Type your message here..."
                           style="-fx-background-color: #F5F5F5; -fx-background-radius: 20; -fx-padding: 10;"
                           HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        prefHeight="40.0"
                        prefWidth="60.0"
                        style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;"
                        text="Send" />
            </children>
        </HBox>
    </children>
</AnchorPane>
